<!-- MODAL IMPORTAR DB -->
<div class="modal fade" id="modalImportarDb" tabindex="-1" aria-labelledby="modalImportarDbLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header border-0 pb-0 pt-4">
                <h5 class="modal-title fw-bold fs-3" id="modalImportarDbLabel">
                    <i class="fa fa-database text-primary me-2"></i>
                    Importar Base de Datos
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form id="formImportarDb" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="nombreDb" class="form-label fw-bold">
                            <i class="fa fa-tag text-muted me-2"></i>
                            Nombre del Módulo/Base de Datos
                        </label>
                        <input type="text" class="form-control form-control-lg rounded-3" id="nombreDb" name="nombreDb"
                               placeholder="Ej: MiProyecto, SistemaVentas, etc." required>
                        <div class="form-text">Este será el nombre de la base de datos a crear en SQL Server</div>
                    </div>

                    <div class="mb-4">
                        <label for="archivoSql" class="form-label fw-bold">
                            <i class="fa fa-file-code text-muted me-2"></i>
                            Archivo SQL o TXT
                        </label>
                        <input type="file" class="form-control form-control-lg rounded-3" id="archivoSql" name="archivoSql"
                               accept=".sql,.txt" required>
                        <div class="form-text">
                            <i class="fa fa-info-circle text-primary"></i>
                            Suba un archivo .sql o .txt con la definición de sus tablas en formato JSON
                        </div>
                    </div>

                    <div id="alertaImportar" class="alert d-none rounded-3" role="alert"></div>

                    <div class="d-flex gap-3 justify-content-end">
                        <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">
                            <i class="fa fa-times me-2"></i>
                            Cancelar
                        </button>
                        <button type="submit" class="btn btn-primary rounded-pill px-4" id="btnImportar">
                            <i class="fa fa-upload me-2"></i>
                            <span id="btnImportarTexto">Importar y Crear</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('formImportarDb');
            const btnImportar = document.getElementById('btnImportar');
            const btnImportarTexto = document.getElementById('btnImportarTexto');
            const alertaDiv = document.getElementById('alertaImportar');

            form.addEventListener('submit', async function (e) {
                e.preventDefault();

                // Validaciones
                const nombreDb = document.getElementById('nombreDb').value.trim();
                const archivoSql = document.getElementById('archivoSql').files[0];

                if (!nombreDb || !archivoSql) {
                    mostrarAlerta('Por favor complete todos los campos', 'warning');
                    return;
                }

                // Deshabilitar botón y mostrar loading
                btnImportar.disabled = true;
                btnImportarTexto.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Procesando...';

                // Preparar FormData
                const formData = new FormData();
                formData.append('nombreDb', nombreDb);
                formData.append('archivoSql', archivoSql);

                try {
                    const response = await fetch('/Home/ImportarDb', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        mostrarAlerta(result.message, 'success');
                        // Limpiar formulario después de 2 segundos
                        setTimeout(() => {
                            form.reset();
                            const modalElement = document.getElementById('modalImportarDb');
                            const modal = bootstrap.Modal.getInstance(modalElement);
                            modal.hide();
                        }, 2000);
                    } else {
                        mostrarAlerta(result.message, 'danger');
                    }
                } catch (error) {
                    mostrarAlerta('❌ Error de conexión: ' + error.message, 'danger');
                } finally {
                    // Rehabilitar botón
                    btnImportar.disabled = false;
                    btnImportarTexto.innerHTML = '<i class="fa fa-upload me-2"></i>Importar y Crear';
                }
            });

            function mostrarAlerta(mensaje, tipo) {
                alertaDiv.className = `alert alert-${tipo} rounded-3`;
                alertaDiv.textContent = mensaje;
                alertaDiv.classList.remove('d-none');

                if (tipo === 'success') {
                    setTimeout(() => {
                        alertaDiv.classList.add('d-none');
                    }, 3000);
                }
            }
        });
    </script>
}