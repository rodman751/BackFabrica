@model Dictionary<string, GenAPK.Controllers.LoginController.ProfileInfo>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Seleccionar Perfil de Conexión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            padding: 2rem;
            max-width: 500px;
            width: 100%;
        }

        .profile-btn {
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1rem;
            transition: all 0.3s;
            cursor: pointer;
        }

            .profile-btn:hover {
                border-color: #667eea;
                background-color: #f8f9fa;
                transform: translateY(-2px);
            }

            .profile-btn.testing {
                border-color: #ffc107;
                background-color: #fff3cd;
            }

            .profile-btn.success {
                border-color: #28a745;
                background-color: #d4edda;
            }

            .profile-btn.error {
                border-color: #dc3545;
                background-color: #f8d7da;
            }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="text-center mb-4">
            <h2>🔌 Seleccionar Servidor</h2>
            <p class="text-muted">Elige el perfil de conexión a la base de datos</p>
        </div>

        <div id="profileList">
            @foreach (var profile in Model)
            {
                <div class="profile-btn" data-profile="@profile.Key" onclick="selectProfile('@profile.Key')">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">@profile.Value.Name</h5>
                            <small class="text-muted">@profile.Value.Server</small>
                        </div>
                        <div class="spinner-border spinner-border-sm text-primary d-none" role="status" id="spinner-@profile.Key">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <span class="badge bg-success d-none" id="check-@profile.Key">✓</span>
                        <span class="badge bg-danger d-none" id="error-@profile.Key">✗</span>
                    </div>
                </div>
            }
        </div>

        <div id="message" class="mt-3"></div>
    </div>

    <script>
        async function selectProfile(profileKey) {
            const profileBtn = document.querySelector(`[data-profile="${profileKey}"]`);
            const spinner = document.getElementById(`spinner-${profileKey}`);
            const check = document.getElementById(`check-${profileKey}`);
            const error = document.getElementById(`error-${profileKey}`);
            const messageDiv = document.getElementById('message');

            // Reset estados
            profileBtn.className = 'profile-btn testing';
            spinner.classList.remove('d-none');
            check.classList.add('d-none');
            error.classList.add('d-none');
            messageDiv.innerHTML = '';

            try {
                const response = await fetch('/Login/TestProfile', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ profileKey: profileKey })
                });

                const result = await response.json();

                spinner.classList.add('d-none');

                if (result.success) {
                    // Conexión exitosa
                    profileBtn.className = 'profile-btn success';
                    check.classList.remove('d-none');
                    messageDiv.innerHTML = `<div class="alert alert-success">✅ ${result.message}</div>`;

                    // Redirigir después de 1 segundo
                    setTimeout(() => window.location.href = '/', 1000);
                } else {
                    // Error de conexión
                    profileBtn.className = 'profile-btn error';
                    error.classList.remove('d-none');
                    messageDiv.innerHTML = `<div class="alert alert-danger">❌ ${result.message}</div>`;

                    // Resetear después de 3 segundos
                    setTimeout(() => {
                        profileBtn.className = 'profile-btn';
                        error.classList.add('d-none');
                    }, 3000);
                }
            } catch (err) {
                spinner.classList.add('d-none');
                profileBtn.className = 'profile-btn error';
                error.classList.remove('d-none');
                messageDiv.innerHTML = '<div class="alert alert-danger">❌ Error al conectar con el servidor</div>';
            }
        }
    </script>
</body>
</html>